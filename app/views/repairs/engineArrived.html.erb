<h1>受領</h1>

<%= form_for(@repair) do |f| %>

  <%= render "errormsg" , modeldata: @repair %>

<div class="row">
<div class="col-md-5">
  <%= render 'engineInfo' %>
  <% disabled_data = getDisabled_EngineArrived %>

<br>
  <%= f.hidden_field :engine_id %>
  <div class="field">
    <%= f.label :arrive_date %><br>
    <%= f.date_select :arrive_date, :use_month_numbers => true, :start_year => 2000 %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit :value => t('views.buttun_arrived'), :confirm => t('views.buttun_arrived')+t('views.confirm_msg') %>
  </div>
  <br>
  <%= link_to t('views.link_back'), anchor_path %>

</div>
<div class="well col-md-5">
  <div class="field">
    <%= f.label :order_no %><br>
    <%= f.text_field :order_no, :disabled=>true %>
  </div>
  <div class="field">
    <%= f.label :order_date %><br>
    <%= f.date_select :order_date, :use_month_numbers => true, :disabled=>true,  :include_blank => true, :start_year => 2000 %>
  </div>
  <div class="field">
    <%= f.label :time_of_running %><br>
    <%= f.number_field :time_of_running, :disabled=>disabled_data[:time_of_running] %>
  </div>
  <div class="field">
    <%= f.label :day_of_test %><br>
    <%= f.date_select :day_of_test, :use_month_numbers => true, :include_blank => true, :start_year => Engine::EARLIEST_START_YEAR, :disabled => disabled_data[:day_of_test], :start_year => 1990 %>
  </div>
  
  <div class="field">
    <%= label_tag t('views.label_runningyear') %><br>
    <%= @repair.calcRunningYear %>
  </div>

  <div class="field">
    <%= f.label :returning_date %><br>
    <%= f.date_select :returning_date, :include_blank => true, :disabled => disabled_data[:returning_date], :use_month_numbers => true, :start_year => 2005 %>
  </div>

  <div class="field">
    <%= f.label :returning_comment %><br>
    <%= f.text_area :returning_comment, :disabled=>disabled_data[:returning_comment] %>
  </div>
</div>
</div>
<% end %>
