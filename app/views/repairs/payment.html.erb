<h1>支払済一覧</h1>


<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>請求日</th>
      <th>支払日</th>
      <% if current_user.yesOffice? %>
        <th>整備会社</th>
      <% end %>
      <th>依頼No</th>
      <th>整備依頼日</th>
      <th>整備開始日</th>
      <th>整備完了日</th>
      <th>エンジン型式</th>
      <th>エンジンNo.</th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.billing_date %></td>
        <td><%= repair.payment_date %></td>
        <% if current_user.yesOffice? %>
          <td><%= Company.find(repair.engine.company_id) %></td>
        <% end %>
        <td><%= repair.order_no %></td>
        <td>
          <%= repair.order_date %>
        </td>
        <td><%= repair.start_date %></td>
        <td>
          <%= repair.finish_date %>
        </td>
        <td><%= repair.engine.engine_model_name %></td>
        <td><%= repair.engine.serialno %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @repairs, :previous_label=>'≪前', :next_label=>'次≫' %>
<br><br>
<%= link_to t('views.link_back'), root_path %>
